<mt-4>
    Danh sách sản phẩm
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">tên</th>
                <th scope="col">ảnh</th>
                <th scope="col">thời gian tạo</th>
            </tr>
        </thead>
        <tbody>
            {{#each product}}
            <tr>
                <th scope="row">1</th>
                <td>{{this.name}}</td>
                <td>{{this.img}}</td>
                <td>{{this.createAt}}</td>
                <td>
                    <a href="/product/{{this._id}}/edit" class="btn btn-link">sửa</a>
                    <a href="" class="btn btn-link">xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</mt-4>